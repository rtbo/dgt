{
    "name": "dgt",
    "authors": [
        "Rémi Thebault"
    ],
    "description": "D GUI Toolkit",
    "copyright": "Copyright © 2016, Rémi Thebault",
    "license": "MIT",

    "buildRequirements": [ "disallowDeprecations" ],

    "stringImportPaths": [
        "views",
        "source/dgt/render/views"
    ],

    "subPackages": [
        "./bindings",
        "./bindings/fontconfig",
        "./bindings/harfbuzz",
        "./bindings/xcb-image",

        "./examples/hello",
        "./examples/proverbs"
    ],

    "dependencies":	{
        "dgt:bindings":		"*",
        "dgt:harfbuzz":	    "*",

        "gfx":          { "path": "gfx-d" },
        "gfx:memalloc": { "path": "gfx-d" },
        "gfx:math":     { "path": "gfx-d" },

        "png-d":            "*",
        "turbojpeg-d":      "*",
        "freetype-d":       "*"
    },

    "configurations": [
        {
            "name": "linux",
            "platforms": ["linux"],
            "dependencies": {
                "xcb-d":			"~>2.1.0",
                "xcb-util-wm-d":	"~>0.5.0",
                "xkbcommon-d":      "~>0.5.1",
                "xlib-d":           "~>0.1.1",

                "dgt:fontconfig":   "*"
            },
            "libs" : ["xcb-xkb", "xcb-dri2", "xcb-dri3"]
        },
        {
            "name": "windows",
            "platforms": ["windows"],
            "libs": ["gdi32", "opengl32", "user32"]
        }
    ]
}
