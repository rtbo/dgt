{
    "name": "dgt",
    "authors": [
        "Rémi Thebault"
    ],
    "description": "D GUI Toolkit",
    "copyright": "Copyright © 2016, Rémi Thebault",
    "license": "MIT",

    "buildRequirements": [ "disallowDeprecations" ],

    "stringImportPaths": [
        "views",
        "source/dgt/render/views"
    ],

    "subPackages": [
        "./bindings",
        "./bindings/cairo",
        "./bindings/fontconfig",
        "./bindings/harfbuzz",
        "./bindings/xcb-image",

        "./core",
        "./css",
        "./gfx",

        "./examples/hello",
        "./examples/proverbs"
    ],

    "dependencies":	{
        "dgt:bindings": "*",
        "dgt:harfbuzz": "*",

        "dgt:core":     "*",
        "dgt:css":      "*",
        "dgt:gfx":      "*",

        "gfx":          "~>0.2.1",
        "gfx:decl":     "~>0.2.1",
        "gfx:memalloc": "~>0.2.1",
        "gfx:math":     "~>0.2.1",
        "gfx:gl3":      "~>0.2.1",
        "gfx:vulkan":   "~>0.2.1",

        "freetype-d":   "~>0.0.2"
    },

    "configurations": [
        {
            "name": "linux",
            "platforms": ["linux"],
            "dependencies": {
                "xcb-d":			"~>2.1.1",
                "xcb-util-wm-d":	"~>0.5.0",
                "xkbcommon-d":      "~>0.5.1",
                "xlib-d":           "~>0.1.1",

                "dgt:fontconfig":   "*"
            },
            "libs" : ["xcb-xkb", "xcb-dri2", "xcb-dri3"]
        },
        {
            "name": "windows",
            "platforms": ["windows"],
            "libs": ["gdi32", "opengl32", "user32"]
        }
    ]
}
